{
  "name": "react-day-picker",
  "version": "8.0.0-beta.3",
  "description": "Flexible Date Picker for React",
  "author": "Giampaolo Bellavite <io@gpbl.dev>",
  "homepage": "http://react-day-picker.js.org",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gpbl/react-day-picker"
  },
  "bugs": {
    "url": "https://github.com/gpbl/react-day-picker/issues"
  },
  "main": "dist/index.js",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "develop": "tsc --watch",
    "lint": "eslint --ext .ts src",
    "test": "jest",
    "coverage": "jest --coverage",
    "test:watch": "jest --watchAll --coverage",
    "build-clean": "rm -rf lib && rm -rf dist && rm -rf docs",
    "build-types": "tsc -p tsconfig.types.json",
    "build-css": "cp ./src/style.css ./dist/style.css",
    "build-dist": "cross-env TS_NODE_PROJECT=tsconfig.dist.json webpack",
    "build": "yarn build-clean && yarn build-dist && tsc && yarn build-types && yarn build-css"
  },
  "files": [
    "dist",
    "lib",
    "src",
    "docs"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.1",
    "@types/webpack": "^4.41.26",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "date-fns": "^2.16.1",
    "debug": "^4.3.1",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.16",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "webpack": "^5.20.0",
    "webpack-cli": "^4.5.0"
  },
  "peerDependencies": {
    "date-fns": "^2.12.0",
    "react": "^16.8.0"
  }
}
