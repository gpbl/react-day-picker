{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "rootDir": "./",
    "baseUrl": "./src",
    "noEmit": true,
    "paths": {
      "test/*": ["../test/*"]
    },
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["src/index.ts"],
  "include": ["test", "src"]
}
