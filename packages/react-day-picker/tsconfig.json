{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "paths": {
      "@test/*": ["../../test/*"],
      "@src/*": ["./src/*"]
    },
    "rootDirs": ["./src", "../../test/*"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
