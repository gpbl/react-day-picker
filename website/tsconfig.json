{
  "extends": "@tsconfig/docusaurus/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
    "lib": ["es2019", "DOM"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "Node16",
    "paths": {
      "@examples/*": ["./examples/*"],
      "@site/*": ["./*"]
    },
    "types": ["jest", "node"]
  }
}
