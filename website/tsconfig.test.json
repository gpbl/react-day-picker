{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["DOM", "ESNext", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": false,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "paths": {
      "@/test": ["./test"]
    },
    "noEmit": true,
    "types": ["node", "jest", "@testing-library/jest-dom", "@types/jest"]
  },
  "include": ["src", "examples", "examples-v8", "test", "test-v8"]
}
