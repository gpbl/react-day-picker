{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": ["ES2022", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "ES2022",
    "outDir": "./dist",
  },
  "exclude": ["./dist", "./test", "**/*.spec.ts"],
}
