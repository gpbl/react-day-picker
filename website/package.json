{
  "name": "website",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm -w build && pnpm --filter scripts run generate-defs",
    "build": "pnpm run prebuild && remix build",
    "dev": "PORT=2001 remix dev --manual",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "build-typedoc-theme": "pnpm tsc -p ./typedoc-theme/tsconfig.json",
    "generate-api-pages": "pnpm run build-typedoc-theme && pnpm typedoc"
  },
