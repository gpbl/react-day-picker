{
  "name": "website",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "TYPEDOC_WATCH=true docusaurus start --hot-only",
    "prestart": "yarn build-rdp",
    "build": "docusaurus build",
    "build-rdp": "yarn workspace react-day-picker build",
    "serve": "docusaurus serve",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "test": "yarn build-rdp && jest",
    "test-watch": "yarn build-rdp && jest --watch --ci",
    "lint": "eslint --ext .ts,.tsx src examples test-integration",
    "typecheck": "tsc --project ./tsconfig.json --noEmit --skipLibCheck",
    "typecheck-watch": "yarn typecheck --watch"
  },
  "dependencies": {
    "@codesandbox/sandpack-react": "^0.9.10",
    "react": "^17.0.2",
    "react-day-picker": "workspace:^",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@docusaurus/core": "2.0.0-beta.9",
    "@docusaurus/module-type-aliases": "^2.0.0-beta.9",
    "@docusaurus/preset-classic": "2.0.0-beta.9",
    "@docusaurus/theme-classic": "^2.0.0-beta.9",
    "@testing-library/jest-dom": "^5.16.1",
    "@tsconfig/docusaurus": "^1.0.4",
    "@types/jest": "^27.0.3",
    "@types/react-helmet": "^6.1.4",
    "@types/react-router-dom": "^5.3.2",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "date-fns": "^2.22.1",
    "docusaurus-plugin-typedoc": "^0.16.5",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "jest": "^27.4.3",
    "prettier": "^2.5.0",
    "raw-loader": "^4.0.2",
    "ts-jest": "^27.1.1",
    "typedoc": "^0.22.10",
    "typedoc-plugin-markdown": "^3.11.7",
    "typescript": "~4.4.4",
    "webpack": "^5.64.4"
  }
}
