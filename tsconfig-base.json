{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020", "DOM.Iterable"],
    "jsx": "react", // Keep this to allow overriding React with Preact
    "module": "ES2020",
    "moduleResolution": "Node",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  }
}
