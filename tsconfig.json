{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": false,
    "skipLibCheck": true,
    "declaration": false,
    "isolatedModules": false,
    "outDir": "./dist",
    "noEmit": true,
    // "baseUrl": "./src",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "exclude": ["node_modules"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/style.ts",
    "test/**/*.tsx",
    "test/**/*.ts"
  ]
}
