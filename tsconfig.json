{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "module": "es6",
    "rootDir": ".",
    "moduleResolution": "node",
    "paths": {
      "@test/*": ["./test/*"],
      "@examples/*": ["./website/examples/*"],
      "@src/*": ["./packages/react-day-picker/src/*"]
    },
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "noEmit": true,
    "outDir": "./build",
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": ["website", "packages/**"]
}
