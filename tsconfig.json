{
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "paths": {
      "@/test/*": ["./test/*"],
      "@/website-test": ["./website/test"]
    },
    "jsx": "react-jsx",
    "noEmit": true,
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "include": ["src", "test", "**/*.test.*"],
  "exclude": ["website"]
}
