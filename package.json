{
  "engines": {
    "node": ">=14",
    "yarn": "2"
  },
  "name": "@react-day-picker/monorepo",
  "private": true,
  "description": "Monorepo of react-day-picker",
  "author": "Giampaolo Bellavite <io@gpbl.org>",
  "homepage": "http://react-day-picker.js.org",
  "license": "MIT",
  "scripts": {
    "develop": "concurrently -n website,package \"yarn workspace website start\" \"yarn workspace react-day-picker develop\"",
    "test": "yarn workspace react-day-picker run test",
    "build": "yarn workspace react-day-picker run build && yarn workspace website run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gpbl/react-day-picker"
  },
  "bugs": {
    "url": "https://github.com/gpbl/react-day-picker/issues"
  },
  "workspaces": [
    "website",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^6.4.0"
  }
}
