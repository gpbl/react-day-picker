{
  "engines": {
    "node": ">=14",
    "yarn": "3"
  },
  "packageManager": "yarn@3.1.0",
  "name": "@react-day-picker/monorepo",
  "private": true,
  "description": "Monorepo of react-day-picker",
  "author": "Giampaolo Bellavite <io@gpbl.org>",
  "homepage": "http://react-day-picker.js.org",
  "license": "MIT",
  "scripts": {
    "develop-all": "concurrently -n \"rdp-typecheck,rdp-build,website-typecheck,website\" \"yarn workspace react-day-picker typecheck-watch --preserveWatchOutput\" \"yarn workspace react-day-picker build-watch --no-watch.clearScreen\"  \"yarn workspace website typecheck-watch --preserveWatchOutput\" \"yarn workspace website start\"",
    "build-all": "yarn workspaces foreach run build",
    "lint-all": "yarn workspaces foreach -pt run lint",
    "test-all": "yarn workspaces foreach run test",
    "typecheck-all": "yarn workspaces foreach run typecheck"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gpbl/react-day-picker"
  },
  "bugs": {
    "url": "https://github.com/gpbl/react-day-picker/issues"
  },
  "workspaces": [
    "website",
    "packages/*"
  ],
  "devDependencies": {
    "concurrently": "^6.4.0"
  }
}
